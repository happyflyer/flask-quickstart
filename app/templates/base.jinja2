                    {% for message in messages %}
                    <div class="alert alert-info" role="alert">{{ message }}</div>
                    {% endfor %}
                {% endif %}
            {% endwith %}
        </div>

        {# 主体部分 #}
        {% block app_content %}
        {% endblock %}
    </div>
{% endblock %}

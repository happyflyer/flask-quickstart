                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink1">
                            <a class="dropdown-item" href="#">{{ _('Complete functions') }}</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">{{ _('Simple deployment') }}</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">{{ _('Easy to develop') }}</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">{{ _('About') }}</a>
                    </li>
                </ul>

{% extends "table.jinja2" %}


{% block table_head %}
    <tr>
        <th>{{ _('id') }}</th>
        <th>{{ _('username') }}</th>
        {% for m in modules %}
        <th>{{ m }}</th>
        {% endfor %}
        <th>{{ _('grant') }}</th>
    </tr>
{% endblock %}


{% block table_body %}
    {% for item in res.items %}
    <tr>
        <td>{{ item.id }}</td>
        <td><a href="{{ url_for('main.get_user', username=item.username) }}">{{ item.username }}</a></td>
        {% for m in modules %}
        <td>{{ permissions[int(item.permission[modules[m]])] }}</td>
        {% endfor %}
        <td><a href="{{ url_for('main.grant_user', username=item.username) }}" class="btn btn-primary btn-sm">{{ _('grant') }}</a></td>
    </tr>
    {% endfor %}
{% endblock %}
